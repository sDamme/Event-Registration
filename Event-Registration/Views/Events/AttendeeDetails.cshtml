@model Event_Registration.Models.AttendeeDetailsViewModel
@{
    ViewData["Title"] = "Osavõtja info";
}

<div class="container mt-3 p-0 bg-white">
    <div class="row g-0" style="height: 90px; overflow: hidden;">
        <div class="col-md-3">
            <div class="bg-primary text-white d-flex align-items-center p-4">
                <div>
                    <h3>@ViewData["Title"]</h3>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <img src="~/images/libled.jpg" alt="Muru Libled" class="img-fluid w-100">
        </div>
    </div>

    <div class="row justify-content-center py-5">
        <div class="col-md-6">
            <h4>@ViewData["Title"]</h4>
            @if (Model.AttendeeType == "Individual")
            {
                // Render partial view for Individual form
                @await Html.PartialAsync("~/Views/Events/Forms/IndividualForm.cshtml", Model.Individual)
            }
            else if (Model.AttendeeType == "Business")
            {
                // Render partial view for Business form
                @await Html.PartialAsync("~/Views/Events/Forms/BusinessForm.cshtml", Model.Business)
            }
        </div>
    </div>
</div>