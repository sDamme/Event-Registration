<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event_Registration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Event_Registration.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container bg-white">
                <a class="me-4 ms-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/proovilogo.png" alt="Event Registration Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Avaleht</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Events", "Add")" asp-area="" asp-controller="Events" asp-action="Add">Ürituse Lisamine</a>
                        </li>
                    </ul>
                    <img class="me-4 py-2" src="~/images/proovilogo2.png" alt="Secondary Logo">
                </div>
            </div>
        </nav>
    </header>

    <div class="container p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container p-0">
            <div class="row mt-3">
                <div class="col-md-3">
                    <h5>Curabitur</h5>
                    <p>Emauris</p>
                    <p>Kfringilla</p>
                    <p>Oin magna sem</p>
                    <p>Kelementum</p>
                </div>
                <div class="col-md-3">
                    <h5>Fusce</h5>
                    <p>Econsectetur</p>
                    <p>Ksollicitudin</p>
                    <p>Omvulputate</p>
                    <p>Nunc fringilla tellu</p>
                </div>
                <div class="col-md-3">
                    <h5>Kontakt</h5>
                    <h6>Peakontor: Tallinnas</h6>
                    <p>Väike-Ameerika 1, 11415 Tallinn</p>
                    <p>Telefon: 605 4450</p>
                    <p>Faks: 605 3186</p>
                </div>
                <div class="col-md-3">
                    <h5>NaN</h5>
                    <h6>Harukontor: Võrus</h6>
                    <p>Oja tn 7 (külastusaadress)</p>
                    <p>Telefon: 605 3330</p>
                    <p>Faks: 605 3155</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
